<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="@dimen/dimen10"
    android:background="@drawable/input_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/dimen10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/month_tv"
            android:textSize="@dimen/text20"
            android:textColor="@color/black"
            android:text="Month:"
            android:padding="@dimen/dimen10"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/month_name_tv"
            android:textSize="@dimen/text20"
            android:textColor="@color/black"
            android:text="July"
            android:padding="@dimen/dimen10"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:elevation="@dimen/dimen10"
        android:layout_marginRight="@dimen/dimen2"
        android:layout_marginLeft="@dimen/dimen2"
        android:layout_marginBottom="@dimen/dimen4"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@color/translucent_50"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/present_days_tv"
                android:textSize="@dimen/text20"
                android:textColor="@color/White"
                android:text="20"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/total_days_label_tv"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/dimen10"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/text16"
                android:textColor="@color/White"
                android:text="Present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:background="@color/translucent_50"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/absent_days_tv"
                android:textSize="@dimen/text20"
                android:textColor="@color/White"
                android:text="4"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/absent_days_label_tv"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/dimen10"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/text16"
                android:textColor="@color/White"
                android:text="Absent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"/>


        <RelativeLayout
            android:background="@color/translucent_50"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/holiday_days_tv"
                android:textSize="@dimen/text20"
                android:textColor="@color/White"
                android:text="1"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/holiday_days_label_tv"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/dimen10"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/text16"
                android:textColor="@color/White"
                android:text="Holiday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>