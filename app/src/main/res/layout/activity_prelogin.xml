<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/ic_app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_above="@+id/parent_rl"
        android:layout_centerHorizontal="true"

        android:layout_alignParentTop="true"
        android:src="@drawable/ic_logo"
        android:layout_gravity="center_horizontal"
        android:background="@color/Transparent"
        android:scaleType="centerInside"/>


    <RelativeLayout
        android:id="@+id/parent_rl"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_marginRight="@dimen/dimen20"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_parent_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/parent_login"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="@dimen/dimen20"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/teacher_rl"
        android:layout_below="@id/parent_rl"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_marginRight="@dimen/dimen20"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_teacher_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/teacher_login"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="@dimen/dimen20"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>